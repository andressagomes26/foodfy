{% extends "layout.njk" %}

{% block title%}
    <title>{{item.title}}</title>
{% endblock %}

{% block content %}
    <div class="recipe-image">
        <img src="{{item.image}}" alt="Imagem de {{item.title}}">
    </div>
    <div class="pageRecipe">
        <div class="recipe-infos">
            <p class="recipe-title">{{item.title}}</p>
            <p class="recipe-author">{{item.author}}</p>
        </div>

        <div class="recipe-ingredients">
                <p class="title-ingredients">Ingredientes</p> 
                <p class="buttoningredients">ESCONDER</p>
            <ul class="ingredients">
                {% for ingredient in item.ingredients %}
                    <li class="ingredientsItem">{{ingredient}}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="recipe-preparation">
            <p class="title-preparation">Modo de Preparo</p>
            <p class="buttonPreparation">ESCONDER</p>
            <div class="preparation">
                {% for preparationItem in item.preparation %}
                    <p class="preparationItem">{{preparationItem}}</p>
                {% endfor %}
            </div>
        </div>

        <div class="recipe-information">
            <p class="title-information">Informações adicionais</p>
            <p class="buttonInformation">ESCONDER</p>
            <div class="information">
                <p class="informationItem">{{item.information}}</p>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    <footer>
        <p class="text-footer">Todos direitos reservados, receitas Foodfy.</p>
    </footer>

    <script src="/script.js"></script>
{% endblock %}